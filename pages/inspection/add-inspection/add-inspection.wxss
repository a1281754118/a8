.add-xunjian{
  padding: 10rpx;
  background: #fff;
  font-size: 28rpx;
  border-bottom: 1rpx #eee solid;
  height: 70rpx;
  line-height: 70rpx;
  overflow: hidden
}
.add-xunjian-input1{
  background: #F9F8F6;
  float: left;
  line-height: 70rpx;
  padding: 15rpx;
  border: 1rpx #eee solid;
  width: 50%;
}
.add-xunjian-view1-1{
  float: left;
  width: 20%;
}
.add-xunjian-view1-2{
  float: left;
  color: #fff;
  background: rgb(255, 154, 1);
  width: 20%;
  text-align: center;
  margin-left: 1%;
}
.add-xunjian-input2{
  background: #F9F8F6;
  float: left;
  line-height: 70rpx;
  padding: 15rpx;
  border: 1rpx #eee solid;
  width: 71%;
}
.add-xunjian-img{
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx;
  float: right;
}
.add-xunjian-anniu{
  width: 50%;
  float: left;
  text-align: center;
  background: aquamarine;
  height: 90rpx;
  line-height: 90rpx;
  
}
.label-1, .label-2{
    margin-bottom: 15px;
}
.label-1__text, .label-2__text {
    display: inline-block;
    vertical-align: middle;
}

.label-1__icon {
    position: relative;
    margin-right: 10px;
    display: inline-block;
    vertical-align: middle;
    width: 18px;
    height: 18px;
    background: #fcfff4;
}

.label-1__icon-checked {
    position: absolute;
    top: 3px;
    left: 3px;
    width: 12px;
    height: 12px;
    background: #1aad19;
}
.group{
  float: left
}